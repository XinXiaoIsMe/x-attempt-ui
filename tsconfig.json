{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@x-attempt/ui": ["./packages/x-attempt-ui"],
      "@x-attempt/hooks": ["./packages/x-attempt-hooks"]
    },
    "resolveJsonModule": true,
    "types": ["node", "vite/client"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/**", "**/demo/**", "**/build/**"]
}
